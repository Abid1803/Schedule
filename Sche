<body class="light">
  <h1>ðŸ“… Your Live Schedule</h1>
  <button class="toggle-btn" onclick="toggleTheme()">Toggle Dark Mode</button>
  <div id="schedule"></div>

  <script>
    const schedule = [
      { start: "09:00", end: "12:00", task: "ðŸ§  Core CS" },
      { start: "12:00", end: "13:00", task: "ðŸ½ï¸ Lunch + Rest" },
      { start: "13:00", end: "15:00", task: "ðŸ¤– Machine Learning Concepts / Practice" },
      { start: "15:00", end: "17:00", task: "ðŸ§© Aptitude (Verbal + Logical Reasoning)" },
      { start: "17:00", end: "19:00", task: "ðŸ” Buffer" },
      { start: "19:00", end: "20:00", task: "ðŸ› Dinner" },
      { start: "20:00", end: "22:00", task: "ðŸ§ª DSA Practice" },
      { start: "22:00", end: "23:00", task: "ðŸ§ª DSA Practice" },
      { start: "23:00", end: "02:30", task: "ðŸ§ª DSA Practice" },
      { start: "03:00", end: "08:00", task: "ðŸ›ï¸ Sleep" },
    ];

    function getCurrentTask() {
      const now = new Date();
      let currentHour = now.getHours();
      let currentMinute = now.getMinutes();
      const currentTime = currentHour * 60 + currentMinute;

      return schedule.map((entry) => {
        let [sh, sm] = entry.start.split(":").map(Number);
        let [eh, em] = entry.end.split(":").map(Number);
        let start = sh * 60 + sm;
        let end = eh * 60 + em;

        if (end < start) end += 24 * 60;

        const active =
          (currentTime >= start && currentTime < end) ||
          (start > end && (currentTime >= start || currentTime < end));

        return {
          ...entry,
          isCurrent: active,
        };
      });
    }

    function renderSchedule() {
      const container = document.getElementById("schedule");
      container.innerHTML = "";

      getCurrentTask().forEach((entry) => {
        const div = document.createElement("div");
        div.className = "task" + (entry.isCurrent ? " current" : "");
        div.innerHTML = `<span class="time">${entry.start} â€“ ${entry.end}</span> <span>${entry.task}</span>`;
        container.appendChild(div);
      });
    }

    function toggleTheme() {
      document.body.classList.toggle("dark");
      document.body.classList.toggle("light");
    }

    renderSchedule();
    setInterval(renderSchedule, 60000);
  </script>
</body>
